{
  "name": "TDD Development Workflow",
  "description": "Test-Driven Development workflow for MaskingEngine",
  "version": "1.0",
  "steps": [
    {
      "id": "write_tests",
      "name": "Write Failing Tests",
      "description": "Create comprehensive test cases for new feature",
      "type": "development",
      "requirements": [
        "Feature specification is clear",
        "Test framework is set up"
      ]
    },
    {
      "id": "implement_feature",
      "name": "Implement Feature",
      "description": "Write minimal code to make tests pass",
      "type": "development",
      "depends_on": ["write_tests"],
      "requirements": [
        "Tests are written and failing",
        "Implementation follows SPARC methodology"
      ]
    },
    {
      "id": "refactor",
      "name": "Refactor Code",
      "description": "Improve code quality while keeping tests green",
      "type": "development",
      "depends_on": ["implement_feature"],
      "requirements": [
        "All tests are passing",
        "Code coverage meets requirements"
      ]
    },
    {
      "id": "document",
      "name": "Update Documentation",
      "description": "Update README, API docs, and examples",
      "type": "documentation",
      "depends_on": ["refactor"],
      "requirements": [
        "Feature is complete",
        "Examples are working"
      ]
    }
  ],
  "context": {
    "project": "MaskingEngine",
    "methodology": "SPARC + TDD",
    "coverage_target": "90%"
  }
}